# Application Configuration
APP_URL=https://your-power-app.com
ENVIRONMENT=dev

# Test User Credentials
TEST_USER=test@example.com
TEST_PASSWORD=your-password-here

# Browser Configuration
BROWSER=chromium  # chromium, firefox, or webkit
HEADLESS=false
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# Timeouts (in milliseconds)
DEFAULT_TIMEOUT=10000
NAVIGATION_TIMEOUT=30000

# AI Configuration
AI_PROVIDER=anthropic  # anthropic, openai, or none
AI_MODEL=claude-sonnet-4-5-20250929  # Model to use (provider-specific)

# ⚠️ IMPORTANT: Replace these placeholder values with your REAL API keys!
# Placeholder values will be rejected with a clear error message.
# Get your Anthropic API key at: https://console.anthropic.com/
# Get your OpenAI API key at: https://platform.openai.com/
ANTHROPIC_API_KEY=sk-ant-your-key-here  # ⚠️ REPLACE THIS!
OPENAI_API_KEY=sk-your-key-here  # ⚠️ REPLACE THIS!

# Advanced AI Features
ENABLE_REASONING=true  # Enable Chain of Thought and Tree of Thought reasoning

# NEW: Quick Wins Features (Phase 1)
ENABLE_PROMPT_CACHING=true  # Enable prompt caching for 90% cost reduction (default: true)
ENABLE_STREAMING=false  # Enable streaming responses for real-time feedback (default: false)
ENABLE_AI_CACHE=true  # Enable response caching (100 entries, 60min TTL) (default: true)
AI_RATE_LIMIT_RPM=50  # Requests per minute rate limit (default: 50)

# Phoenix Tracing & Observability
# Phoenix provides observability for AI/LLM calls (tracks costs, latency, prompts, responses)
#
# NEW: Phoenix UI now auto-launches when framework starts! (Python only)
# The framework will automatically start Phoenix and open the UI at http://localhost:6006
# You can disable auto-launch by setting PHOENIX_LAUNCH_UI=false
#
# If you don't need tracing at all, set ENABLE_PHOENIX_TRACING=false
ENABLE_PHOENIX_TRACING=true  # Enable Arize Phoenix tracing for LLM observability
PHOENIX_LAUNCH_UI=true  # Auto-launch Phoenix UI when framework starts (default: true)
PHOENIX_COLLECTOR_ENDPOINT=http://localhost:6006/v1/traces
SERVICE_NAME=ai-playwright-framework
SERVICE_VERSION=2.0.0

# Feature Flags
ENABLE_HEALING=true
ENABLE_SCREENSHOTS=true
ENABLE_VIDEO=false

# Reporting
ENABLE_ALLURE=false

# Power Apps Specific
POWER_APPS_TENANT_ID=your-tenant-id
POWER_APPS_CLIENT_ID=your-client-id

# Logging Configuration
# The framework now uses structured logging with detailed information
# Available levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
#
# DEBUG: Very detailed logs including all framework operations
# INFO: Standard logs showing major events and status (recommended)
# WARNING: Only warnings and errors
# ERROR: Only errors
#
# Structured logs include:
# - Timestamps for all events
# - Color-coded log levels (green=info, yellow=warning, red=error)
# - Contextual information (scenario names, durations, etc.)
# - Detailed Phoenix initialization logs
# - Browser and authentication status
# - Step-by-step execution tracking
LOG_LEVEL=INFO  # Default: INFO (set to DEBUG for verbose output)
