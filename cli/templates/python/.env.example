# Application Configuration
APP_URL=https://your-power-app.com
ENVIRONMENT=dev

# Test User Credentials
TEST_USER=test@example.com
TEST_PASSWORD=your-password-here

# Browser Configuration
BROWSER=chromium  # chromium, firefox, or webkit
HEADLESS=false
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# Timeouts (in milliseconds)
DEFAULT_TIMEOUT=10000
NAVIGATION_TIMEOUT=30000

# AI Configuration
AI_PROVIDER=anthropic  # anthropic, openai, or none
AI_MODEL=claude-sonnet-4-5-20250929  # Model to use (provider-specific)
ANTHROPIC_API_KEY=sk-ant-your-key-here
OPENAI_API_KEY=sk-your-key-here

# Advanced AI Features
ENABLE_REASONING=true  # Enable Chain of Thought and Tree of Thought reasoning

# NEW: Quick Wins Features (Phase 1)
ENABLE_PROMPT_CACHING=true  # Enable prompt caching for 90% cost reduction (default: true)
ENABLE_STREAMING=false  # Enable streaming responses for real-time feedback (default: false)
ENABLE_AI_CACHE=true  # Enable response caching (100 entries, 60min TTL) (default: true)
AI_RATE_LIMIT_RPM=50  # Requests per minute rate limit (default: 50)

# Phoenix Tracing & Observability
ENABLE_PHOENIX_TRACING=true  # Enable Arize Phoenix tracing for LLM observability
PHOENIX_COLLECTOR_ENDPOINT=http://localhost:6006/v1/traces
PHOENIX_LAUNCH_UI=true  # Automatically launch Phoenix UI
SERVICE_NAME=ai-playwright-framework
SERVICE_VERSION=1.0.0

# Feature Flags
ENABLE_HEALING=true
ENABLE_SCREENSHOTS=true
ENABLE_VIDEO=false

# Reporting
ENABLE_ALLURE=false

# Power Apps Specific
POWER_APPS_TENANT_ID=your-tenant-id
POWER_APPS_CLIENT_ID=your-client-id

# Logging
LOG_LEVEL=INFO
