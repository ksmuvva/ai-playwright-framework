# Environment Variables for Claude Playwright Agent
# Copy this file to .env and fill in your values

# ============================================================================
# REQUIRED: Development Mode
# ============================================================================
CPA_DEV_MODE=true

# ============================================================================
# REQUIRED: LLM Provider API Keys
# ============================================================================
# At least one provider API key is required
# Anthropic/Claude API Key (default provider)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API Key (for GPT-4, GPT-3.5 Turbo)
OPENAI_API_KEY=your_openai_api_key_here

# Zhipu AI API Key (for GLM-4, GLM-3-Turbo)
ZHIPUAI_API_KEY=your_zhipuai_api_key_here

# Optional: Custom API endpoints
# ANTHROPIC_BASE_URL=https://api.anthropic.com
# OPENAI_BASE_URL=https://api.openai.com
# ZHIPUAI_BASE_URL=https://open.bigmodel.cn

# ============================================================================
# OPTIONAL: Multi-LLM Provider Configuration
# ============================================================================
# Primary LLM provider (anthropic, openai, glm)
CPA_AI__PROVIDER=anthropic

# Fallback providers in priority order (comma-separated)
# These providers will be used if the primary provider fails
CPA_AI__FALLBACK_PROVIDERS=openai,glm

# Provider-specific model settings
# Anthropic/Claude models
CPA_AI__ANTHROPIC__MODEL=claude-3-5-sonnet-20241022
CPA_AI__ANTHROPIC__MAX_TOKENS=8192
CPA_AI__ANTHROPIC__TEMPERATURE=0.3
CPA_AI__ANTHROPIC__ENABLE_CACHING=true

# OpenAI models
CPA_AI__OPENAI__MODEL=gpt-4-turbo-preview
CPA_AI__OPENAI__MAX_TOKENS=4096
CPA_AI__OPENAI__TEMPERATURE=0.7
CPA_AI__OPENAI__ORGANIZATION=

# Zhipu AI/GLM models
CPA_AI__GLM__MODEL=glm-4-plus
CPA_AI__GLM__MAX_TOKENS=8192
CPA_AI__GLM__TEMPERATURE=0.3

# Model aliases for cross-provider compatibility
# These allow switching providers while keeping the same "model name"
# CPA_AI__MODEL_ALIASES__claude-sonnet=claude-3-5-sonnet-20241022
# CPA_AI__MODEL_ALIASES__gpt-4=gpt-4-turbo-preview

# ============================================================================
# OPTIONAL: License Configuration
# ============================================================================
# Your license key (for production use)
CPA_LICENSE_KEY=

# License server endpoint
CPA_LICENSE_SERVER=https://license.claudeplaywright.ai

# Offline grace period in days
CPA_OFFLINE_GRACE_PERIOD_DAYS=30

# ============================================================================
# OPTIONAL: Logging Configuration
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
CPA_LOG_LEVEL=INFO

# Log file path (empty for stdout only)
CPA_LOG_FILE=

# Enable JSON logging
CPA_LOG_JSON=false

# ============================================================================
# OPTIONAL: Telemetry Configuration
# ============================================================================
# Enable telemetry collection
CPA_TELEMETRY_ENABLED=true

# Telemetry endpoint
CPA_TELEMETRY_ENDPOINT=https://telemetry.claudeplaywright.ai

# ============================================================================
# OPTIONAL: Feature Flags
# ============================================================================
# Enable experimental features
CPA_EXPERIMENTAL=false

# Enable Power Apps support
CPA_POWER_APPS_ENABLED=false

# ============================================================================
# OPTIONAL: AI Configuration (Legacy - for backward compatibility)
# ============================================================================
# Default model (used if provider-specific model not set)
CPA_DEFAULT_MODEL=claude-3-5-sonnet-20241022

# Max tokens for AI responses
CPA_MAX_TOKENS=4096

# Temperature for AI responses
CPA_TEMPERATURE=0.3

# Enable prompt caching
CPA_ENABLE_CACHING=true

# Enable streaming responses
CPA_ENABLE_STREAMING=true

# ============================================================================
# OPTIONAL: Development Settings
# ============================================================================
# Save agent conversations for debugging
CPA_SAVE_CONVERSATIONS=false

# Conversation save directory
CPA_CONVERSATIONS_DIR=.cpa/conversations

# Enable debug mode
CPA_DEBUG=false

# Mock license validation (for testing)
CPA_MOCK_LICENSE=false
